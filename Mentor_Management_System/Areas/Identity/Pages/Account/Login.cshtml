@page
@model LoginModel

@{
    ViewData["Title"] = "Sign in";
    Layout = "~/Views/Shared/_MinimalLayout.cshtml";
}

<div class="container d-flex justify-content-center align-items-center" style="height: 700px;">
    <div class="row">
        <div class="col-md-6">
            <img src="~/MentorStyles/assets/img/addmission.jpeg" class="img-fluid" alt="">
        </div>
        <div class="col-md-6">
            <section>
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="my-3">
                        <input type="email" asp-for="Input.Email" id="email" placeholder="Enter Email" class="form-control">
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="my-3">
                        <input type="password" asp-for="Input.Password" id="password" placeholder="Enter Password" class="form-control">
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    
                    <div>
                        <button id="login-submit" type="submit" class="btn btn-primary">Sign in</button>
                    </div>
                    <div>
                        @*<p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                        <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                        </p>*@
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>


