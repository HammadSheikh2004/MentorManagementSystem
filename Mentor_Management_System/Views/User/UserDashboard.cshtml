@model Mentor_Management_System.Models.MentorViewModel

@{
    Layout = null;
    string disabledClass = "disabled";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="Description" content="Enter your description here" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.1.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
    <title>UserDashboard - Mentor</title>
</head>

<body>

    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand text-center text-black" href="#">
                Mentor <span class="d-block"
                             style="font-size: 13px;">Online Admission</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation">
                <i class="fa-sharp fa-regular fa-bars"></i>
                <span class=""></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                   
                        <p class="me-2">Hi, @Model.User.User_First_Name</p>
                    <div class="button">
                        <form class="form-inline" asp-controller="User" asp-action="Logout" method="post">
                        <button type="submit" class="btn btn-sm btn-outline-success">SignOut</button>
                        </form>
                    </div>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid mt-5">
        <div class="row">
            <div class="col-md-6">
                <div class="card p-4">
                    <div class="h4">Admission Status</div>
                    <span class="bg-success rounded" style="width: 100px; padding: 3px;"></span>
                    <div class="row">
                        <div class="col-md-6">
                            <p class="my-4" style="font-size: 13px;">
                                Please complete your Application Form first of all
                            </p>
                            <a asp-controller="User" asp-action="AdmissionProcess" class="btn btn-success" style="width: 150px;">
                                Application
                                Form
                            </a>
                        </div>
                        <div class="col-md-6">
                            <p class="my-4" style="font-size: 13px;">Application Form</p>
                            <a href="" class="btn btn-success" style="width: 250px;">Download Application Form</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6" style="overflow: hidden;">
                <div class="card p-4">
                    <div class="h4">Payment Options</div>
                    <span class="bg-success rounded" style="width: 100px; padding: 3px;"></span>
                    <div class="row">
                        <div class="col-md-4">
                            <p class="mt-3" style="font-size: 12px;">
                                Take a printout of challan & pay at the nearest branch
                            </p>
                            <a asp-controller="User" asp-action="APFChallanPrint"
                               class="btn btn-success @(Model.User.APF_Challan == null || Model.User.APF_Challan == "Pending" ? "disabled" : "")"
                               style="width: 150px;">
                                APF challan
                            </a>
                        </div>
                        <div class="col-md-4">
                            <p class="my-4" style="font-size: 13px;">Tuition Fee challan</p>
                            <a class="btn btn-success @(Model.User.TF_Challan == null || Model.User.TF_Challan == "Pending" ? "disabled" : "")"
                               style="width: 150px;">
                                Tuition Fee
                            </a>
                        </div>
                        <div class="col-md-4">
                            <p class="my-4" style="font-size: 13px;">Online Payment</p>
                            <a asp-controller="User" asp-action="DisplayPayment"
                               class="btn btn-success @(Model.User.APF_Challan == null || Model.User.APF_Challan == "Pending" ? "disabled" : "")"
                               style="width: 150px;">
                                Pay Online
                            </a>
                        </div>
                    </div>

                </div>
            </div>

            <div class="col-md-6 mt-4" style="overflow: hidden;">
                <div class="card p-4">
                    <div class="h4">Other Options</div>
                    <span class="bg-success rounded" style="width: 100px; padding: 3px;"></span>
                    <div class="row">
                        <div class="col-md-4">
                            <p class="mt-3" style="font-size: 12px;">Admin Card</p>

                            <a href="#"
                               class="btn btn-success @(Model.User.Admit_Card == null || Model.User.Admit_Card == "NoIssue" ? "disabled" : "")"
                               style="width: 150px;">
                                Print Admit Card
                            </a>

                        </div>
                        <div class="col-md-4">
                            <p class="my-4" style="font-size: 13px;">Offer Letter</p>
                            <a href="" class="btn btn-success disabled" style="width: 100px;">None</a>
                        </div>
                        <div class="col-md-4">
                            <p class="my-4" style="font-size: 13px;">Welcome Letter</p>
                            
                            <a href="#"
                               class="btn btn-success @(Model.User.WellCome_Letter == null || Model.User.WellCome_Letter == "NoIssue" ? "disabled" : "")"
                               style="width: 150px;">
                                Welcome Letter
                            </a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.9.2/umd/popper.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.1.0/js/bootstrap.min.js"></script>
</body>

</html>