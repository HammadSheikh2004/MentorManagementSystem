@model Mentor_Management_System.Models.MentorViewModel

@{
    ViewData["Title"] = "StudentInfo";
    Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";
}

<div class="container">
    <div class="heading h3 text-center py-1 shadow rounded text-white bg-primary my-4">
        Course Information
    </div>
    <div class="row mt-3">
        <div class="col-md-12">
            <form asp-action="SearchCourseField" method="post">
                <input type="text" class="form-control" placeholder="Search: How many Student are Enroll in Specific Field!" name="course" id="search">
                <button type="submit" class="btn btn-primary mt-2" id="btnSearch">Search</button>
            </form>
            @if (Model != null && Model.FieldCount > 0)
            {
                <p class="text-danger my-2">The total number of @Model.CourseName students are enrolled is @Model.FieldCount.</p>
            }
        </div>
    </div>
    <div class="row">
        <div class="heading h3 text-center py-1 shadow rounded text-white bg-primary my-4">
            Create Student
        </div>
        <div class="col-md-12">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <form action="StudentInfo" method="post">
                <div class="form-group">
                    <label for="count">Number of Students</label>
                    <input type="number" class="form-control" id="count" name="count" required />
                </div>
                <div class="form-group">
                    <label for="initialStudentId">Initial Student ID</label>
                    <input type="text" class="form-control" id="initialStudentId" name="initialStudentId" required />
                </div>
                <div class="form-group">
                    <label for="course">Course</label>
                    <input type="text" class="form-control" id="course" name="course" required />
                </div>
                <div class="form-group mb-3">
                    <label class="form-label">Faculty Name</label>
                    <input type="text" class="form-control" id="FacultyName" name="FacultyName" />
                </div>
                
                <div class="form-group mb-3">
                    <label class="form-label">Faculty Id</label>
                    <input type="text" class="form-control" id="FacultyId" name="FacultyId" />
                </div>

                <div class="form-group">
                    <label>Class Time</label>
                    <input name="classTime" type="date" class="form-control" />
                </div>         
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" name="password" required />
                </div>
                <button type="submit" class="btn btn-primary">Generate</button>
            </form>
        </div>
    </div>
</div>

<script>
    function updateFacultyName(selectElement) {
        var selectedText = selectElement.options[selectElement.selectedIndex].text;
        console.log("Selected Faculty Name: ", selectedText);
        document.getElementById('FacultyName').value = selectedText;
    }

</script>

